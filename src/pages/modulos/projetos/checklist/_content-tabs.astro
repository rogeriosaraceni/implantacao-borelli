<script is:inline>
    function navLinkTabsActive() {
        const currentUrl = window.location.pathname
        const navLinks = $(`#pills-tab a[href="${currentUrl}"]`)

        if (navLinks) {
            navLinks.addClass('active')
        }
    }
    navLinkTabsActive()
</script>
