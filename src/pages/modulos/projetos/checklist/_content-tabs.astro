<style is:inline>
    /* --------------------------------------------------------------------
    wrapper-sticky-tabs
    ---------------------------------------------------------------------- */
    .wrapper-sticky-tabs{
        position: sticky;
        top: 75px;
        z-index: 100;
    }
    .wrapper-sticky-tabs .card{
        background-color: #d0dae4;
    }

    @media(max-width: 991px){
        .wrapper-sticky-tabs{
            position: relative;
            top: auto;
        }
    }

    /* --------------------------------------------------------------------
    nav-pills-app
    ---------------------------------------------------------------------- */
    .nav-pills-app .nav-item{
        margin-bottom: 0.25rem;
    }

    .nav-pills-app .nav-link{
        padding: 0.25rem 0.5rem;
        width: 100%;
        color: #000;
        border: 1px solid var(--bs-border-color);
        background-color: #f8f8f8;
        transition: all 0.3s;
        font-size: 0.85rem;
    }
    .nav-pills-app .nav-link:hover{
        color: #000;
        background-color: #efefef;
    }

    .nav-pills.nav-pills-app .nav-link.active,
    .nav-pills.nav-pills-app .show>.nav-link,
    .nav-pills.nav-pills-app .nav-link.active:hover,
