---
import Layout from '@layouts/Layout.astro';
import Header from '@includes/header/header.astro';
import BtnPrincipal from '@components/Btns/BtnPrincipal.astro';
import ContentSelecao from './_ContentSelecao.astro'
import ContentListagem from './_ContentListagem.astro'

---

<Layout>
    <Header />

    <main data-el="main-app" class="main-app">
        <section class="container-fluid">
            <nav aria-label="breadcrumb" class="breadcrumb-app">
                <div class="d-flex align-items-center justify-content-between gap-1">
                    <ol class="breadcrumb mb-0">
                        <li class="breadcrumb-item">
                            <a href="/principal/" data-bs-toggle="tooltip" data-bs-title="Principal">
                                <i class="bi bi-house-fill"></i>
                            </a>
                        </li>
                        <li class="breadcrumb-item">Acompanhamento</li>
                        <li class="breadcrumb-item active" aria-current="page">Status</li>
                    </ol>

                    <BtnPrincipal />
                </div>
            </nav>
        </section>

        <section class="container-fluid">
            <ContentSelecao />
            <ContentListagem />
        </section>
    </main>
</Layout>
