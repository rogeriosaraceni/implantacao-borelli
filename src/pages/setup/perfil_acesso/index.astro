---
import Layout from '@layouts/Layout.astro';
import Header from "@includes/header/header.astro";
import BtnPrincipal from '@components/Btns/BtnPrincipal.astro';
import ContentSelecao from './_content-selecao.astro';
import ContentListagem from './_content-listagem.astro';
---

<Layout>
    <header data-el="top-fixed" class="header-app navbar navbar-expand-xl">
        <div class="d-flex flex-column w-100">
            <Header />
        </div>
    </header>

    <main data-el="main-app" class="main-app">
        <section class="container-fluid">
            <nav aria-label="breadcrumb" class="breadcrumb-app">
                <div class="d-flex align-items-center justify-content-between gap-1">
                    <ol class="breadcrumb mb-0">
                        <li class="breadcrumb-item">
                            <a href="/principal/" data-bs-toggle="tooltip" data-bs-title="Principal">
                                <i class="bi bi-house-fill"></i>
                            </a>
                        </li>
                        <li class="breadcrumb-item">Setup</li>
                        <li class="breadcrumb-item active" aria-current="page">Perfil de Acesso</li>
                    </ol>

                    <BtnPrincipal />
                </div>
            </nav>
        </section>

        <section class="container-fluid">
            <ContentSelecao />
            <ContentListagem />
        </section>
    </main>
</Layout>
